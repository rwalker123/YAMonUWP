<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YAMon.View.MainTabPageiOS"
             xmlns:pages="clr-namespace:YAMon.View;assembly=YAMon">
  <NavigationPage
      BarBackgroundColor="{DynamicResource Primary}"
      BarTextColor="White"
      Icon="tab_feed.png"
      Title="Browse">
    <x:Arguments>
      <pages:BrowseItemsPage/>
    </x:Arguments>
  </NavigationPage>
  <NavigationPage
      BarBackgroundColor="{DynamicResource Primary}"
      BarTextColor="White"
      Icon="tab_feed.png"
      Title="My Items">
    <x:Arguments>
      <pages:MyItemsPage/>
    </x:Arguments>
  </NavigationPage>
  <NavigationPage
      BarBackgroundColor="{DynamicResource Primary}"
      BarTextColor="White"
      Icon="tab_about.png"
      Title="About">
    <x:Arguments>
      <pages:AboutPage/>
    </x:Arguments>
  </NavigationPage>
</TabbedPage>